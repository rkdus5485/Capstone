<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="OnClickHandler"
            android:text="Start Date" />


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="OnClickHandler_e"
            android:text="End Date" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_date_start"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="시작 날짜" />
        <TextView
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:text="~"/>
        <TextView
            android:id="@+id/textView_date_end"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="마지막 날짜"/>
        <Button
            android:id="@+id/btn_onClick"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="조회"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_main_listviewheader1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="날짜"/>
        <TextView
            android:id="@+id/textview_main_listviewheader5"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="입/출금"/>
        <TextView
            android:id="@+id/textview_main_listviewheader2"
            android:gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="구분"/>
        <TextView
            android:id="@+id/textview_main_listviewheader3"
            android:gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="내역"/>

        <TextView
            android:id="@+id/textview_main_listviewheader4"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="금액" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/trandate"
            android:gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/inout_type"
            android:gravity="center_horizontal"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tran_type"
            android:gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/print_content"
            android:gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tran_amt"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/food_label"
            android:gravity="center_horizontal"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="식비"/>
        <TextView
            android:id="@+id/food_sum"
            android:gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/shop_label"
            android:gravity="center_horizontal"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="쇼핑"/>
        <TextView
            android:id="@+id/shop_sum"
            android:gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/life_label"
            android:gravity="center_horizontal"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="생활"/>
        <TextView
            android:id="@+id/life_sum"
            android:gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/culture_label"
            android:gravity="center_horizontal"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="문화/여가"/>
        <TextView
            android:id="@+id/culture_sum"
            android:gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/traffic_label"
            android:gravity="center_horizontal"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="교통"/>
        <TextView
            android:id="@+id/traffic_sum"
            android:gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/other_label"
            android:gravity="center_horizontal"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="기타"/>
        <TextView
            android:id="@+id/other_sum"
            android:gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>