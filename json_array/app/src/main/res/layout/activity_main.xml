<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_main_listviewheader1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="날짜"/>
        <TextView
            android:id="@+id/textview_main_listviewheader5"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="입/출금"/>
        <TextView
            android:id="@+id/textview_main_listviewheader2"
            android:gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="구분"/>
        <TextView
            android:id="@+id/textview_main_listviewheader3"
            android:gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="내역"/>
        <TextView
            android:id="@+id/textview_main_listviewheader4"
            android:gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="금액"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/trandate"
            android:gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/inout_type"
            android:gravity="center_horizontal"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tran_type"
            android:gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/print_content"
            android:gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tran_amt"
            android:gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
